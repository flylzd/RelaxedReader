<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ripple"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    app:mrl_rippleAlpha="0.8"
    app:mrl_rippleColor="@color/ripple_material_dark"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true">

    <ImageView
        android:id="@+id/list_item_navigation_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/list_item_navigation_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/navigation_text_size"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/space_size_16"
        android:textColor="@android:color/black" />

</com.balysv.materialripple.MaterialRippleLayout>


