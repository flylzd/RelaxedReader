<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rippleLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/space_size_16"
    android:paddingTop="@dimen/space_size_16"
    android:paddingBottom="@dimen/space_size_16"
    app:mrl_rippleAlpha="0.6"
    app:mrl_rippleColor="@color/black"
    app:mrl_rippleInAdapter="true"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/list_item_navigation_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/list_item_navigation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_size_16"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/navigation_text_size" />

    </LinearLayout>

